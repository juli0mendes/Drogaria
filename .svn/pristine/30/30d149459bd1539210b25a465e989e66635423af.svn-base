package br.com.juliomendes90.drogaria2.dao;

import java.util.List;

import org.junit.Ignore;
import org.junit.Test;

import br.com.juliomendes90.drogaria2.domain.Cidade;
import br.com.juliomendes90.drogaria2.domain.Pessoa;

/**
 * {Descricao da Classe}
 * 
 * Classe <code>PessoaDAOTest</code>.
 * 
 * @author jcmorais
 * @version 1.0 (18/07/2016)
 */
public class PessoaDAOTest {

	/**
	 * Salvar.
	 */
	@Test
	@Ignore
	public void salvar() {
		PessoaDAO pessoaDAO = new PessoaDAO();

		Pessoa pessoa = new Pessoa();
		pessoa.setBairro("Jardim Gramacho");
		pessoa.setCelular("2199998888");
		pessoa.setCep("23000000");
		pessoa.setComplemento("Casa");
		pessoa.setCpf("08485389271");
		pessoa.setEmail("lfbandeira@brasilcap.com.br");
		pessoa.setNome("Bandeira");
		pessoa.setNumero(new Short("3"));
		pessoa.setRg("403289440");
		pessoa.setRua("Rua B");
		pessoa.setTelefone("21336699888");

		CidadeDAO cidadeDAO = new CidadeDAO();
		Cidade cidade = cidadeDAO.buscar(19L);

		pessoa.setCidade(cidade);

		pessoaDAO.salvar(pessoa);
	}

	/**
	 * Buscar.
	 */
	@Test
	@Ignore
	public void buscar() {
		PessoaDAO pessoaDAO = new PessoaDAO();

		Pessoa pessoa = pessoaDAO.buscar(3L);

		if (pessoa != null) {
			System.out.println("Pessoa encontrada: " + pessoa.getNome());
		} else {
			System.out.println("Pessoa não localizada!");
		}
	}

	/**
	 * Listar.
	 */
	@Test
	@Ignore
	public void listar() {
		PessoaDAO pessoaDAO = new PessoaDAO();

		List<Pessoa> listaPessoas = pessoaDAO.listar();

		System.out.println("Quantidade de pessoas: " + listaPessoas.size());

		for (Pessoa pessoa : listaPessoas) {
			System.out.println("Pessoa: " + pessoa.getNome());
		}
	}

	/**
	 * Excluir.
	 */
	@Test
	@Ignore
	public void excluir() {
		PessoaDAO pessoaDAO = new PessoaDAO();

		Pessoa pessoa = pessoaDAO.buscar(4L);

		if (pessoa != null) {
			pessoaDAO.excluir(pessoa);
			System.out.println("Pessoa " + pessoa.getNome() + " excluída!");
		} else {
			System.out.println("Pessoa não localizada!");
		}
	}

	/**
	 * Editar.
	 */
	@Test
	@Ignore
	public void editar() {
		PessoaDAO pessoaDAO = new PessoaDAO();

		Pessoa pessoa = pessoaDAO.buscar(5L);

		if (pessoa != null) {
			System.out.println("Pessoa a ser editada: " + pessoa.getNome());

			pessoa.setBairro("Alcântara");
			pessoa.setCelular("21887744552");
			pessoa.setCep("25000000");
			pessoa.setComplemento("Frente");
			pessoa.setCpf("49351739201");
			pessoa.setEmail("jthomaz@brasilcap.com.br");
			pessoa.setNome("Júlio Cesar Grativol");
			pessoa.setNumero(new Short("25"));
			pessoa.setRg("418757896");
			pessoa.setRua("Rua José Ferreira");
			pessoa.setTelefone("2122222220");

			CidadeDAO cidadeDAO = new CidadeDAO();
			Cidade cidade = cidadeDAO.buscar(17L);

			pessoa.setCidade(cidade);

			pessoaDAO.editar(pessoa);

			System.out.println("Pessoa editada: " + pessoa.getNome());
		} else {
			System.out.println("Pessoa não encontrada!");
		}
	}
}
