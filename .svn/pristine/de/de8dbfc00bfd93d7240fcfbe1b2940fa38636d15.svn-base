<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://xmlns.jcp.org/jsf/html"
	xmlns:f="http://xmlns.jcp.org/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
	template="/templates/modelo.xhtml">
	
	<ui:define name="conteudo">
		<h:form id="formListagem">
			<p:panel header="Itens Venda - Listagem">
				<p:dataTable emptyMessage="Nenhum registro encontrado."
					paginator="true">
					<f:facet name="header">
						<p:commandButton value="Novo" oncomplete="PF('dialogo').show();" />
					</f:facet>

					<p:column headerText="Quantidade">
					</p:column>

					<p:column headerText="Valor Parcial">
					</p:column>

					<p:column headerText="Produto">
					</p:column>

					<p:column headerText="Venda">
					</p:column>

					<p:column headerText="Opções">
					</p:column>
				</p:dataTable>
			</p:panel>
		</h:form>

		<p:dialog header="Itens Venda - Cadastro" widgetVar="dialogo"
			draggable="false" resizable="false" modal="true" closable="false">
			<h:form>
				<h:panelGrid columns="2">
					<p:outputLabel value="Quantidade" />
					<p:inputText maxlength="5" size="10" />

					<p:outputLabel value="Valor Parcial" />
					<p:inputText maxlength="8" size="10" />

					<p:outputLabel value="Produto" />
					<p:selectOneMenu filter="true">
						<f:selectItem itemValue="" itemLabel="Selecione um produto" />
					</p:selectOneMenu>

					<p:outputLabel value="Venda" />
					<p:selectOneMenu filter="true">
						<f:selectItem itemValue="" itemLabel="Selecione um venda" />
					</p:selectOneMenu>

				</h:panelGrid>

				<h:panelGrid columns="2">
					<p:commandButton value="Salvar" />
					<p:commandButton value="Fechar" oncomplete="PF('dialogo').hide();" />
				</h:panelGrid>
			</h:form>
		</p:dialog>
	</ui:define>
</ui:composition>