package br.com.juliomendes90.drogaria2.dao;

import java.text.ParseException;
import java.util.Date;
import java.util.List;

import org.junit.Ignore;
import org.junit.Test;

import br.com.juliomendes90.drogaria2.domain.Cliente;
import br.com.juliomendes90.drogaria2.domain.Pessoa;

/**
 * {Descricao da Classe}
 * 
 * Classe <code>ClienteDAOTest</code>.
 * 
 * @author jcmorais
 * @version 1.0 (18/07/2016)
 */
public class ClienteDAOTest {

	/**
	 * Salvar.
	 * 
	 * @throws ParseException
	 *             parse exception
	 */
	@Test
	@Ignore
	public void salvar() throws ParseException {
		PessoaDAO pessoaDAO = new PessoaDAO();
		Pessoa pessoa = pessoaDAO.buscar(8L);

		Cliente cliente = new Cliente();
		// cliente.setDataCadastro(new
		// SimpleDateFormat("dd/MM/yyyy").parse("19/04/2016"));
		cliente.setDataCadastro(new Date());
		cliente.setLiberado(false);
		cliente.setPessoa(pessoa);

		ClienteDAO clienteDAO = new ClienteDAO();
		clienteDAO.salvar(cliente);

		System.out.println("Cliente salvo com sucesso!");
	}

	/**
	 * Buscar.
	 */
	@Test
	@Ignore
	public void buscar() {
		ClienteDAO clienteDAO = new ClienteDAO();
		Cliente cliente = clienteDAO.buscar(1L);

		if (cliente != null) {
			System.out.println("Cliente: " + cliente.getPessoa().getNome());
		} else {
			System.out.println("Cliente não encontrado!");
		}
	}

	/**
	 * Listar.
	 */
	@Test
	@Ignore
	public void listar() {
		ClienteDAO clienteDAO = new ClienteDAO();

		List<Cliente> listaClientes = clienteDAO.listar();

		System.out.println("Total de clientes: " + listaClientes.size());

		for (Cliente cliente : listaClientes) {
			System.out.println("Cliente: " + cliente.getPessoa().getNome());
		}
	}
	
	/**
	 * Excluir.
	 */
	@Test
	@Ignore
	public void excluir() {
		ClienteDAO clienteDAO = new ClienteDAO();
		Cliente cliente = clienteDAO.buscar(1L);
		
		if (cliente != null) {
			System.out.println("Cliente a ser excluído: " + cliente.getPessoa().getNome() + "!");
			
			clienteDAO.excluir(cliente);
		} else {
			System.out.println("Cliente não encontrado!");
		}
	}
	
	/**
	 * Editar.
	 */
	@Test
	@Ignore
	public void editar() {
		ClienteDAO clienteDAO = new ClienteDAO();
		Cliente cliente = clienteDAO.buscar(5L);
		
		if (cliente != null) {
			System.out.println("Cliente a ser editado: " + cliente.getPessoa().getNome());
			
			cliente.setLiberado(true);
			
			clienteDAO.editar(cliente);
		} else {
			System.out.println("Cliente não encontrado!");
		}
	}
}
