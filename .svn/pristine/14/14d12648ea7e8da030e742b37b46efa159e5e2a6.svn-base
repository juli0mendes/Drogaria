package br.com.juliomendes90.drogaria2.dao;

import java.util.List;

import org.junit.Ignore;
import org.junit.Test;

import br.com.juliomendes90.drogaria2.domain.Estado;

/**
 * {Descricao da Classe}
 * 
 * Classe <code>EstadoDAOTest</code>.
 * 
 * @author jcmorais
 * @version 1.0 (18/07/2016)
 */
public class EstadoDAOTest {

	/**
	 * Salvar.
	 */
	@Test
	@Ignore
	public void salvar() {
		Estado estado = new Estado();
		estado.setCodigo(4L);
		estado.setNome("Paraná");
		estado.setSigla("PR");

		EstadoDAO estadoDAO = new EstadoDAO();
		estadoDAO.salvar(estado);
	}

	/**
	 * Listar.
	 */
	@Test
	@Ignore
	public void listar() {
		EstadoDAO estadoDAO = new EstadoDAO();

		List<Estado> resultado = estadoDAO.listar();

		System.out.println("Total de registros encontrados: "
				+ resultado.size());

		for (Estado estado : resultado) {
			System.out.println(estado.getCodigo() + " - " + estado.getSigla()
					+ " - " + estado.getNome());
		}
	}

	/**
	 * Buscar.
	 */
	@Test
	@Ignore
	public void buscar() {
		Long codigo = 4L;

		EstadoDAO estadoDAO = new EstadoDAO();

		Estado estado = estadoDAO.buscar(codigo);

		if (estado != null) {
			System.out.println(estado.getSigla() + " - " + estado.getNome());
		} else {
			System.out.println("Nenhum registro encontrado!");
		}
	}

	/**
	 * Excluir.
	 */
	@Test
	@Ignore
	public void excluir() {
		Long codigo = 5L;

		EstadoDAO estadoDAO = new EstadoDAO();

		Estado estado = estadoDAO.buscar(codigo);

		if (estado != null) {
			estadoDAO.excluir(estado);
			System.out.println("Registro removido: " + estado.getNome() + "!");
		} else {
			System.out.println("Nenhum registro encontrado!");
		}
	}

	/**
	 * Editar.
	 */
	@Test
	@Ignore
	public void editar() {
		Long codigo = 7L;

		EstadoDAO estadoDAO = new EstadoDAO();

		Estado estado = estadoDAO.buscar(codigo);

		if (estado != null) {
			System.out.println("Registro editado - antes: " + estado.getSigla()
					+ " - " + estado.getNome());

			estado.setSigla("SP");
			estado.setNome("São Paulo");

			estadoDAO.editar(estado);

			System.out.println("Registro editado - depois: "
					+ estado.getSigla() + " - " + estado.getNome());
		} else {
			System.out.println("Registro não encontrado!");
		}
	}
}
