<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Configurações da Conexão com o BD -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/drogaria</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>

		<!-- Pool de Conexões JDBC -->
		<property name="connection.pool_size">1</property>

		<!-- Dialeto SQL -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Gerenciamento do Contexto das Sessões -->
		<property name="current_session_context_class">thread</property>

		<!-- Cache de Segundo Nível -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Exibe os comandos SQL -->
		<property name="show_sql">true</property>

		<!-- Cria as tabelas do BD (create/update/validate) -->
		<property name="hbm2ddl.auto">validate</property>

		<!-- Mapeamento das Entidades -->
		<mapping class="br.com.juliomendes90.drogaria2.domain.Cidade" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Cliente" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Estado" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Fabricante" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Funcionario" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.ItemVenda" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Pessoa" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Produto" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Usuario" />
		<mapping class="br.com.juliomendes90.drogaria2.domain.Venda" />

	</session-factory>

</hibernate-configuration>